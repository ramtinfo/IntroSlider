<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header" />
    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/divider"
        android:layout_height="1dp"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Select Language"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:textSize="15sp"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:columnCount="3"
        app:rowCount="5"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/border_shape"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="English"
                android:padding="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/border_shape"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Arabic"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/border_shape"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="German"
                android:padding="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/border_shape"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Spanish"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/border_shape"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="French"
                android:padding="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/border_shape"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Hebrew"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/border_shape"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Norwegian"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/border_shape"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            android:backgroundTint="@color/colorPrimary"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Italian"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="#FFF"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/border_shape"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Dutch"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/border_shape"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Portuguese"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/border_shape"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Russian"
                android:padding="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/border_shape"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Northern Sami"
                android:padding="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/border_shape"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Chinese"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Select Date"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content" />
        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            app:columnCount="2"
            app:rowCount="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="0dp"
                app:layout_columnWeight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/image"
                   android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_001_calendar"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="15-01-2018"
                    android:layout_below="@id/image"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="19sp"
                    android:background="@drawable/border_shape"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                app:layout_columnWeight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/image1"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_001_calendar"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="15-01-2018"
                    android:layout_below="@id/image1"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="19sp"
                    android:background="@drawable/border_shape"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Articles sort by"
        android:textAlignment="center"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        app:columnCount="2"
        app:rowCount="1"
        android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:background="@drawable/border_shape"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:id="@+id/desc"
                android:text="@string/play_again_desc"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="match_parent"
                android:layout_below="@id/desc"
                android:text="relevancy"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:background="@drawable/border_shape"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:id="@+id/desc"
                android:text="@string/play_again_desc"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="match_parent"
                android:layout_below="@id/desc"
                android:text="popularity"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.GridLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_margin="2dp"
        android:background="@drawable/border_shape"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:id="@+id/desc"
            android:text="@string/play_again_desc"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:layout_below="@id/desc"
            android:text="popularity at"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>